{
  "version": "0.0.1-alpha.5",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "^3.9.5",
    "@types/jest": "^26.0.3",
    "@types/supertest": "^2.0.9",
    "jest": "^26.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "np": "^6.2.4",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "build": "yarn run build:core && yarn run build:typeorm && yarn run build:jwt",
    "build:core": "yarn workspace @restyjs/core run build",
    "build:typeorm": "yarn workspace @restyjs/typeorm run build",
    "build:jwt": "yarn workspace @restyjs/jwt run build",
    "release:core": "yarn workspace @restyjs/core run np",
    "release:typeorm": "yarn workspace @restyjs/typeorm run np",
    "release:jwt": "yarn workspace @restyjs/jwt run np",
    "test": "JWT_SECRET=secret jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
